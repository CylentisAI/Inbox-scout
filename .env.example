AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Production Environment
NODE_ENV=production

# DO NOT SET: PORT (Railway provides this automatically)

# Optional Service Configuration
AGENT_SERVICE_PORT=3000
DIGEST_SERVICE_PORT=3001
SENT_MONITOR_PORT=3002

# Email Digest (7:30 AM Sydney time)
DIGEST_SCHEDULE=30 7 * * *
DIGEST_TIMEZONE=Australia/Sydney
DIGEST_RECIPIENT=amy@alignedtribe.com

# Monitoring (45 minutes email check, 1 hour sent monitoring)
EMAIL_CHECK_INTERVAL=2700000    # 45 minutes (45 * 60 * 1000)
SENT_MONITOR_INTERVAL=3600000   # 1 hour (60 * 60 * 1000)
MONITORING_ALERTS_ENABLED=true
